
<tr>
  <td><%= l(article.created_at, format: :only_date) %></td>
  <td><%= article.category.name %></td>
  <td><%= article.title %></td>
  <td>
    <div class="icons">
      
      <%= link_to edit_administrate_article_path(article), title: "Editar", alt: "edit" do %>
          <%= image_tag "icons/gray/edit.svg" %>
      <% end %>
      
      <%= link_to [:administrate, article], title: "Visualizar", alt: "eye" do %>
          <%= image_tag "icons/gray/eye.svg" %>
      <% end %>

      <%= button_to [:administrate, article], title: "Apagar", class: "butto-transparent", alt: "close", data: { turbo: false }, method: :delete do  %>
        <%= image_tag "icons/gray/close.svg" %>
      <% end %>
    </div>
  </td>
</tr>
