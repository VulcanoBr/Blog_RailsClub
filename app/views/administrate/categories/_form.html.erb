
<div class="row">
    <%= form_with(model: [:administrate, category], class: "form", id: "category-form") do |form| %>
      <div class="input-row">
        <div class="input-container">
          <%= form.label :name, class:"label" %>
          <%= form.text_field :name, disabled: (action == :show), placeholder: "Digite aqui a categoria", class:"input" %>
        </div>
      </div>

      <div class="input-row">
        <div class="input-container">
          <%= form.label :description, class:"label" %>
          <%= form.text_area :description, disabled: (action == :show), placeholder: "Digite uma descriçãoo para a categoria", class:"input" %>
        </div>
      </div>

      <div>
        <%= form.label :category_image, style: "display: block", class: "mb-8 label-input-file" %>
        <%= (form.file_field :category_image, style: "margin-bottom: 8px;") if action != :show %>

        <div id=<%= dom_id(category) %> >
          <%= image_tag category.category_image, style: "margin-bottom: 8px;" if category.category_image.attached? %>

          <%= link_to "Remover", 
            destroy_category_image_administrate_category_path(category),
            data: { "turbo-confirm": "Tem certeza?", "turbo-method": :delete } if category.category_image.attached? && action != :show %>
        </div>


      <div>
        <%= button_to "Apagar categoria", [:administrate, @category], data: { turbo: false }, method: :delete, class: "button small" if action == :show %>
      </div>

      <%= form.submit style: "display: none;" %>

    <% end %>
  </div>
